set nu "显示行号"
set ruler "屏幕右下角显示光标坐标"
syntax on "自动语法高亮"
filetype indent plugin on "自动缩进"
set showcmd "显示输入的命令"
set background=dark "背景色dark"
set tabstop=4 "tab字符宽度为4"
set softtabstop=4 "tab键宽度为4"
set shiftwidth=4 "自动缩进宽度为4"
set smartindent "按语法自动缩进"
set showmatch "插入反括号时，短暂显示正括号位置"
set incsearch "搜索过程中，不用输入完，就能看到搜索内容"
set clipboard=unnamedplus "同步系统和vim的剪贴板"

set hlsearch "高亮被搜索的字符串"

set ttymouse=xterm2 "解决鼠标不好用问题"
set mouse=a "打开鼠标功能"
set cursorline "高亮当前行"
hi cursorline cterm=NONE ctermbg=black ctermfg=NONE "设置行高亮颜色"
